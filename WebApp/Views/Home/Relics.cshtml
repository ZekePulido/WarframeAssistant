@model Dictionary<string, List<WebApp.Models.WarframeItem>>

@{
    ViewData["Title"] = "Relic Information";
    var searchTerm = ViewData["Search"] as string ?? "";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

    <form method="get" asp-action="Relics" class="mb-4">
        <div class="input-group mb-2">
            <input type="text" name="search" class="form-control" placeholder="Search item name..." value="@searchTerm" />
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    @if (!Model.Any() || Model.Values.All(list => !list.Any()))
    {
        <div class="alert alert-warning">
            <em>No results found.</em>
        </div>
    }
    else
    {
        @foreach (var category in Model)
        {
            <div class="mb-5">
                <h2 class="text-secondary border-bottom pb-2">@category.Key</h2>

                @foreach (var item in category.Value)
                {
                    if (item.Vaulted)
                    {
                        continue;  
                    }
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            @if (!string.IsNullOrEmpty(item.ImageName))
                            {
                                <img src="@($"https://cdn.warframestat.us/img/{item.ImageName}")"
                                     alt="@item.Name"
                                     class="img-fluid rounded"
                                     style="max-height: 120px; object-fit: contain;" />
                            }
                            else
                            {
                                <div class="text-muted small">No image</div>
                            }
                            @if (item.Rewards != null && item.Rewards.Count > 0)
                            {
                                <p><strong>Rewards:</strong></p>
                                <ul class="list-group list-group-flush">
                                    @foreach (var reward in item.Rewards)
                                    {
                                        <li class="list-group-item">
                                            <strong>Item:</strong> @reward.Item.Name <br />
                                            <strong>Rarity:</strong> @reward.Rarity <br />
                                            <strong>Chance:</strong> @reward.Chance%
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>
